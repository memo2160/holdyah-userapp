<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Basic Form with Surname & PIN</title>
    <!-- Bootstrap CSS CDN -->
    <link
        href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css"
        rel="stylesheet"
    >
    <link rel="stylesheet" href="../src/css/style.css">

</head>
<body>

    <div class="container mt-5">
        <% if ((error_message && error_message.length > 0) || (message && message.length > 0)) { %>
            <div class="alert text-center <%= error_message ? 'alert-danger' : 'alert-success' %>" id="error_alert" role="alert">
              <p><%= error_message ? error_message[0] : message[0] %></p> <!-- Display the first error or success message -->
            </div>
          <% } %>
        <h1 class="mb-4 text-center">Enter Your Details</h1>
        <form action="/submit" method="POST" class="card p-4 shadow-sm">
            <!-- Surname Field -->
            <div class="mb-3">
                <label for="surname" class="form-label">Surname</label>
                <input type="text" class="form-control" id="surname" name="surname" placeholder="Enter your surname" required>
            </div>

            <!-- PIN Number Field -->
            <div class="mb-3">
                <label for="pin" class="form-label">PIN Number</label>
                <input type="password" class="form-control" id="pin" name="pin" placeholder="Enter your PIN number" required>
            </div>

            <!-- Submit Button -->
            <button type="submit" class="btn btn-primary w-100">Submit</button>
        </form>
    </div>

    <!-- Bootstrap JS CDN (Optional for some components) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
